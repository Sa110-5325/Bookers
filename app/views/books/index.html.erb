<body>
  <h1>Books</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
      </tr>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to "Show", book_path(book) %></td>
          <td><%= link_to "Edit", edit_book_path(book) %></td>
          <td><%= link_to "Destroy", book_path(book), method: :delete, data: {confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </thead>
  </table>
</body>

<h2>New Book</h2>

<%= form_with model:@book, local:true do |f| %>
<%= render "error_form", book:@book %>
  <h4 class = "book_title">Title</h4>
  <%= f.text_field :title, class: "book_title" %>
  <h4 class = "book_body">Body</h4>
  <%= f.text_area :body, class: "book_body" %>
  <p><%= f.submit 'Create Book'%></p>
<% end %>